<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.INFOGRAM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextWhite" parent="Theme.MaterialComponents.DayNight">
        <!-- para el tamano de letra que se escriba en el hint -->
        <item name="android:textSize">@dimen/editText_textSize</item>

        <!-- para la letra pequena del hint -->
        <item name="android:textColorHint">@color/editText_white</item>

        <!-- para la letra que se escribe en el espacio del hint -->
        <item name="android:textColorPrimary">@color/editText_white</item>

        <!-- para la linea horizontal del hint cuando NO esta seleccionado -->
        <item name="colorControlNormal">@color/editText_white</item>

        <!-- para la linea horizontal del hint cuando esta seleccionado -->
        <item name="colorControlActivated">@color/editText_white</item>


    </style>

    <style name="EditTextBlack" parent="Theme.MaterialComponents.DayNight">
        <!-- para el tamano de letra que se escriba en el hint -->
        <item name="android:textSize">@dimen/editText_textSize</item>

        <!-- para la letra pequena del hint -->
        <item name="android:textColorHint">@color/editText_black</item>

        <!-- para la letra que se escribe en el espacio del hint -->
        <item name="android:textColorPrimary">@color/editText_black</item>

        <!-- para la linea horizontal del hint cuando NO esta seleccionado -->
        <item name="colorControlNormal">@color/editText_black</item>

        <!-- para la linea horizontal del hint cuando esta seleccionado -->
        <item name="colorControlActivated">@color/editText_black</item>


    </style>

    <style name="RaiseButtonDark" parent="Theme.MaterialComponents.DayNight">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/editText_white</item>
    </style>

</resources>